package br.com.restaurante.restauranteservice.repository;


import java.util.List;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import br.com.restaurante.restauranteservice.model.MenuItem;

public interface MenuItemRepository extends JpaRepository<MenuItem, Long>{
	
	 List<MenuItem> salvarMenu(List<MenuItem> menuItemList);
	 Page<MenuItem> showMenu(String restaurantId, Pageable pageable);
	 Page<MenuItem> showMenuByRestauranteId(String restauranteId, Pageable pageable);

}
