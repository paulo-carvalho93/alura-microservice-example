package br.com.restaurante.pagamentoservice;

import com.fasterxml.jackson.databind.ObjectMapper;

import br.com.restaurante.pagamentoservice.model.Pagamento;
import br.com.restaurante.pagamentoservice.service.PagamentoService;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.cloud.stream.annotation.EnableBinding;
import org.springframework.cloud.stream.messaging.Sink;
import org.springframework.integration.annotation.MessageEndpoint;

import lombok.extern.slf4j.Slf4j;

@MessageEndpoint
@EnableBinding(Sink.class)
@Slf4j
public class PagamentoValidatorSink {
	
	@Autowired
    private ObjectMapper objectMapper;

    @Autowired
    private PagamentoService pagamentoService;

    public void atualizarPagamento(String input) throws Exception {
        log.info("Payment INFO: " + input);
        
        Pagamento pagamento = this.objectMapper.readValue(input, Pagamento.class);
        boolean isValid = pagamentoService.processarPagamento(pagamento);
        log.info("Payment processed, valid payment: " + isValid);
    }

    public void updatePagamentoFallback(String input) {
        log.info("Não foi possível processar pagamento" + input);
    }

}
