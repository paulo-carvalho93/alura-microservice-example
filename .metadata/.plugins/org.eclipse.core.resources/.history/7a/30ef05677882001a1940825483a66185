package br.com.restaurante.restauranteservice.model;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;
import javax.persistence.ManyToOne;
import javax.persistence.Table;

import com.fasterxml.jackson.annotation.JsonInclude;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@Entity
@AllArgsConstructor
@NoArgsConstructor
@JsonInclude(JsonInclude.Include.NON_NULL)
public class MenuItem {

    @Id
    @GeneratedValue
    @Column(name = "menuitem_id")
    private Long Id;

    private String itemId;
    private String itemName;
    private String itemDescricao;
    private double itemPreco;
    
    private String restauranteId;

    @ManyToOne
    private Restaurante restaurante;
    
    public MenuItem(String name, double preco, String descricao, String restauranteId) {
        this.itemName = name;
        this.itemPreco = preco;
        this.itemDescricao = descricao;
        this.restauranteId = restauranteId;
        this.itemId = String.valueOf((name+preco+descricao).hashCode());
    }
    
}