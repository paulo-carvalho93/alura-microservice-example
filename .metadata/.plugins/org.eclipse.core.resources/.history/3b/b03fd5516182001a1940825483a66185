package br.com.restaurante.pedidoservice.repository;

import java.util.List;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;

import br.com.restaurante.pedidoservice.model.FoodItem;
import br.com.restaurante.pedidoservice.model.Pedido;

public interface FoodRepository extends JpaRepository<FoodItem, Long>{
	List<FoodItem> findFirstByPedidoId(Pedido pedido);
    Page<FoodItem> findByRestauranteId (String restauranteId, Pageable pageable);
}
