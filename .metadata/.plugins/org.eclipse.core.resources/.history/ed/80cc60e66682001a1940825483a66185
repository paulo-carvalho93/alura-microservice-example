package br.com.restaurante.pagamentoservice.service.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpEntity;
import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import br.com.restaurante.pagamentoservice.model.Pagamento;
import br.com.restaurante.pagamentoservice.model.Pedido;
import br.com.restaurante.pagamentoservice.model.PedidoStatus;
import br.com.restaurante.pagamentoservice.service.PagamentoService;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@Service
public class PagamentoServiceImpl implements PagamentoService {
	
	@Autowired
    private RestTemplate restTemplate;
	
    public boolean validarInformacao(Pagamento pagamento) {
        int m = 3;
        boolean isCartaoValido = (((pagamento.getNumeroCartao() + pagamento.getExpiracao()).hashCode() - pagamento.getCodigo().hashCode())%m == 0);
        
        return isCartaoValido;
    }
    
    @Override
    public boolean processarPagamento(Pagamento pagamento) {

        String prefix = "http://localhost:9002/restaurant/order/";
        String url = prefix + pagamento.getPedidoId();
        boolean isInformacaoValida = validarInformacao(pagamento);
        
        if (isInformacaoValida) {
            log.info("Payment validated, calling order-service API to show confirmed info");

            Pedido pedido = new Pedido();
            pedido.setPedidoStatus(PedidoStatus.PAGO);

            HttpEntity<Pedido> entity = new HttpEntity<>(pedido);
            this.restTemplate.put("http://localhost:9002/restaurant/order/{orderId}", entity, pagamento.getOrderId());
        }
        
        return isInformacaoValida;
    }

}
