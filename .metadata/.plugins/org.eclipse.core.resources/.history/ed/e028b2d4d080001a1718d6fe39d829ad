package br.com.restaurante.restauranteservice.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.web.bind.annotation.PathVariable;

import br.com.restaurante.restauranteservice.model.Restaurante;
import br.com.restaurante.restauranteservice.repository.RestauranteRepository;

@Service
public class RestauranteService {
	
	@Autowired
	private RestauranteRepository restauranteRepository;
	
	public void salvar(Restaurante restaurante) {
		restauranteRepository.save(restaurante);

	}

	public List<Restaurante> findAll() {
		return (List<Restaurante>) restauranteRepository.findAll();
		
	}
	
	public Restaurante findByRestauranteName(String nome) {
        return restauranteRepository.findByRestauranteName(nome);
    }
	 
	 
}