package br.com.restaurante.pedidoservice.model;

import javax.persistence.*;

import com.fasterxml.jackson.annotation.JsonInclude;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@JsonInclude(JsonInclude.Include.NON_EMPTY)
@Entity(name = "foodItem")
@AllArgsConstructor
@NoArgsConstructor
public class FoodItem {

    @Id
    @GeneratedValue
    private Long id;

    private String foodId;
    private String foodNome;
    private String descricao;
    private String restauranteName;
    private double preco;
    private int quantidade;
    private String restauranteId;

    @ManyToOne
    private Pedido pedido;

	public FoodItem(Long id, String foodId, String foodNome, String descricao, String restauranteName, double preco,
			int quantidade, String restauranteId, Pedido pedido) {
		this.id = id;
		this.foodId = foodId;
		this.foodNome = foodNome;
		this.descricao = descricao;
		this.restauranteName = restauranteName;
		this.preco = preco;
		this.quantidade = quantidade;
		this.restauranteId = restauranteId;
		this.pedido = pedido;
	}
    
    
}